<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kingdom.aasgard.mmmtp1.Main2Activity">

    <TextView
        android:text="Nom : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvNom"
        android:layout_marginTop="16dp"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="PrÃ©nom : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvPrenom"
        android:layout_marginTop="16dp"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="Date de naissance : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvDateDeNaissance"
        android:layout_marginTop="16dp"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="Departement : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDepartement"
        android:layout_below="@+id/tvDateDeNaissance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="Ville de naissance : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvVilleNaissance"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_below="@+id/tvDepartement"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
